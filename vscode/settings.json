{
	// Generals
	"editor.fontFamily": "JetBrains Mono",
	"editor.fontLigatures": true,
	"editor.fontSize": 12.5,
	"editor.fontWeight": "500",
	"editor.lineHeight": 25,
	"editor.formatOnPaste": true,
	// "terminal.integrated.fontFamily": "MesloLGS NF",
	// "terminal.integrated.shell.osx": "/bin/zsh",
	// "terminal.external.linuxExec": "iterm",
	// "terminal.external.osxExec": "Iterm.app",
	"editor.smoothScrolling": true,
	// "explorer.openEditors.visible": 2,
	"workbench.tree.indent": 14,
	"editor.minimap.enabled": false,
	"editor.detectIndentation": false,
	"editor.tabCompletion": "onlySnippets",
	"editor.snippetSuggestions": "top",

	// Disable Italics
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": [
					"storage.type",
					"variable.parameter",
					"parameters variable.function",
					"support.type",
					"storage.modifier",
					"entity.other.inherited-class",
					"entity.other.attribute-name"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},

	// Emmet
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},

	// Vim
	"editor.lineNumbers": "relative",
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "block",

	//  Prettier
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.singleQuote": true,
	"prettier.semi": true,
	"prettier.trailingComma": "all",
	"editor.suggestSelection": "first",
	"editor.codeActionsOnSave": {
		"source.organizeImports": true,
		"source.fixAll.eslint": true
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,

	// Stealth
	"editor.renderLineHighlight": "all",
	// "workbench.editor.showIcons": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"colorize.languages": ["javascript", "typescript"],
	"editor.linkedEditing": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"workbench.colorCustomizations": {
		// "editor.background": "#fff"
		"editorCursor.foreground": "#ccc",
		"terminalCursor.foreground": "#ccc"
	},
	"json.maxItemsComputed": 10000,

	// Max Editors Open - For Vim
	// "workbench.editor.limit.enabled": true,
	// "workbench.editor.limit.value": 4,
	"breadcrumbs.enabled": false,
	"workbench.editor.untitled.hint": "hidden",
	"cSpell.userWords": [
		"appbar",
		"autodocs",
		"blurhash",
		"Cersei",
		"clsx",
		"codegen",
		"Daenerys",
		"Datagrid",
		"Devkey",
		"favourites",
		"fontsource",
		"Futura",
		"hookform",
		"ICCID",
		"Lannister",
		"mbannhe",
		"Melisandre",
		"nativewind",
		"openapi",
		"paraspara",
		"precommit",
		"Pressable",
		"Probodhan",
		"refetching",
		"roboto",
		"sidedcube",
		"supabase",
		"svgr",
		"svgs",
		"tailwindcss",
		"Targaryen",
		"toastify",
		"Triaging",
		"Urql",
		"vdrs",
		"vermillion"
	],
	"editor.guides.indentation": true,
	"git.mergeEditor": false,
	"terminal.integrated.gpuAcceleration": "on",

	"editor.unicodeHighlight.nonBasicASCII": false,
	"window.nativeTabs": false,
	"yaml.schemas": {
		"file:///Users/vladbibire/.vscode/extensions/atlassian.atlascode-3.0.6/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
	},
	"workbench.iconTheme": "material-icon-theme",
	"workbench.editor.enablePreview": false,
	"workbench.colorTheme": "Tokyo Night",
	"workbench.statusBar.visible": false,
	"workbench.activityBar.visible": false
}
